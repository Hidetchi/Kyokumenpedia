<h2>登録情報の更新</h2>

<p>ユーザ名: <strong><%= current_user.username %></strong></p>
<p>メールアドレス: <strong><%= current_user.email %></strong></p>

<%= form_for :user, html: { method: :put } do |f| %>
  <div>棋力<br><%= f.text_field :strength %></div>
  <div>棋風や得意戦型<br><%= f.text_field :style %></div>
  <div>ホームページ<br><%= f.text_field :url %></div>
  <div>自己紹介 <i>(140字以内)</i><br><%= f.text_field :description, :size => "70", :maxlength => 140 %></div>
  <div>81道場アカウント <i>(マイページに81道場ウィジェットが表示されます)</i><br><%= f.text_field :name81 %></div>
  <br>
  <div><%= f.check_box :receive_watching %>ウォッチ中の局面の編集通知をメールで受け取る</div>
  <div><%= f.check_box :receive_following %>フォロー中のユーザによる編集通知をメールで受け取る</div>
  <br>
  <div><%= f.submit "登録情報更新" %></div>
<% end %>

<br><br>
<h3>パスワード変更フォーム</h3>
<div style="margin-left:30px;">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div>新しい<%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %></div>

  <div><%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %></div>

  <div><%= f.label :current_password %><br />
    <%= f.password_field :current_password, autocomplete: "off" %></div>

  <br>
  <div><%= f.submit "パスワード変更" %></div>
<% end %>
</div>

